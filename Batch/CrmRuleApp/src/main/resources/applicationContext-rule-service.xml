<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd"
	default-autowire="byName">

	<context:annotation-config/>	
	<context:component-scan base-package="com.motiftech.icollection.service" />

	<bean id="accountDao" 		class="com.motiftech.icollection.dao.impl.AccountDaoImpl"/>
	<bean id="autoApproveDao" 	class="com.motiftech.icollection.dao.impl.AutoApproveDaoImpl"/>
	<bean id="calendarDao" 		class="com.motiftech.icollection.dao.impl.CalendarDaoImpl"/>
	<bean id="optionDao" 		class="com.motiftech.icollection.dao.impl.OptionDaoImpl"/>
	<bean id="prepareEmailDao" 	class="com.motiftech.icollection.dao.impl.PrepareEmailDaoImpl"/>
	<bean id="typeDao" 			class="com.motiftech.icollection.dao.impl.TypeDaoImpl"/>
	<bean id="userDao" 			class="com.motiftech.icollection.dao.impl.UserDaoImpl"/>
</beans>