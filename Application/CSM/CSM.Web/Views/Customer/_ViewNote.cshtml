@model CSM.Web.Models.NoteViewModel
<div class="modal-dialog modal-sm" style="min-width:800px;">
    <div id="dvBrForm" class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h5 class="modal-title">Note</h5>                    
        </div>
        <div class="modal-body form-horizontal">            
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <div class="col-md-2">
                            <p class="form-control-static">
                                รายละเอียด :
                            </p>
                        </div>
                        <div class="col-md-9 nopadding">                            
                            <p class="form-control-static">
                                @Html.DisplayFor(model => model.Detail, new { @class = "form-control" })
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="col-md-4">
                            <p class="form-control-static">
                                สร้างโดย :
                            </p>
                        </div>
                        <div class="col-md-6 nopadding">
                            <p class="form-control-static">
                                @Html.DisplayFor(model => model.CreateUser)
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 nopadding">
                    <div class="form-group">
                        <div class="col-md-4">
                            <p class="form-control-static">
                                วันที่สร้าง :
                            </p>
                        </div>
                        <div class="col-md-6 nopadding">
                            <p class="form-control-static">
                                @Html.DisplayFor(model => model.CreateDate)
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="col-md-4">
                            <p class="form-control-static">
                                แก้ไขโดย :
                            </p>
                        </div>
                        <div class="col-md-6 nopadding">
                            <p class="form-control-static">
                                @Html.DisplayFor(model => model.UpdateUser)
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 nopadding">
                    <div class="form-group">
                        <div class="col-md-4">
                            <p class="form-control-static">
                                วันที่แก้ไข :
                            </p>
                        </div>
                        <div class="col-md-6 nopadding">
                            <p class="form-control-static">
                                @Html.DisplayFor(model => model.UpdateDate)
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="modal-footer">                
                <button type="button" class="btn btn-gray btn-sm btn-xsmall" data-dismiss="modal" aria-hidden="true">Close</button>
            </div>
        </div>
    </div>
</div>
