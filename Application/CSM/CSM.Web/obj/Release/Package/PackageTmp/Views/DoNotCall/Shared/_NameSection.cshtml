@model CSM.Entity.DoNotCallBasicInfoModel

<div class="section_borderless_panel">
    <div class="padding-left-15">
        <div class="row form-group">
            <label class="col-sm-2 control-label form-label">
                @Html.DisplayNameFor(m => m.FirstName):
                <span id="reqFirstName" class="required-field-block">*</span>
            </label>
            <div class="col-sm-4">
                @Html.TextBoxFor(m => m.FirstName, new { id = "txtFirstName", @class = "form-control input-sm" })
                @Html.ValidationMessageFor(m => m.FirstName)
            </div>
        </div>
        <div class="row form-group">
            <label class="col-sm-2 control-label form-label">@Html.DisplayNameFor(m => m.LastName):</label>
            <div class="col-sm-4">
                @Html.TextBoxFor(m => m.LastName, new { id = "txtLastName", @class = "form-control input-sm" })
                @Html.ValidationMessageFor(m => m.LastName)
            </div>
        </div>
    </div>
</div>